{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./@typing"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "esModuleInterop": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#components/*": [
        "src/components/*"
      ],
      "#data/*": [
        "src/data/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ],
    },
    "incremental": true
  },
  "include": [
    "src",
    "*.config.ts",
    "*.config.js",
    "*.config.cjs",
    ".eslintrc.cjs",
    "@typing/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compileOnSave": false
}
